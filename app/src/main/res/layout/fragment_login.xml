<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="492dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391">

        <EditText
            android:id="@+id/userPhone"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="51dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="265dp"
            android:layout_marginEnd="-3dp"
            android:layout_marginRight="-3dp"
            android:background="@drawable/ic_edittext_background"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Enter your mobile number"
            android:inputType="phone"
            android:gravity="center"
            android:textColor="#2370F2"
            android:textColorHint="#2370F2" />

        <ImageButton
            android:id="@+id/get_otp_button"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_below="@+id/userPhone"
            android:layout_alignStart="@+id/userPhone"
            android:layout_alignLeft="@+id/userPhone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-14dp"
            android:layout_marginLeft="-14dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginBottom="49dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_rectangle_5" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/get_otp_button"
            android:layout_alignEnd="@+id/get_otp_button"
            android:layout_alignRight="@+id/get_otp_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="121dp"
            android:layout_marginRight="121dp"
            android:fontFamily="sans-serif-black"
            android:text="Get OTP"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="249dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:src="@drawable/laundryfemale" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/get_otp_button"
            android:layout_alignLeft="@+id/get_otp_button"
            android:layout_alignTop="@+id/get_otp_button"
            android:layout_alignEnd="@+id/get_otp_button"
            android:layout_alignRight="@+id/get_otp_button"
            android:layout_marginStart="87dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/login_header"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/header"
        android:gravity="center_horizontal"
        android:textColor="#2370F2"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />


</androidx.constraintlayout.widget.ConstraintLayout>